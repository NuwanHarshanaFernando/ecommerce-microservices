# Build the docker image with `npx nx docker-build common-service`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t common-service`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system common-service && \
          adduser --system -G common-service common-service

COPY apps/common-service/dist common-service/
RUN chown -R common-service:common-service .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix common-service --omit=dev -f install

CMD [ "node", "common-service" ]
